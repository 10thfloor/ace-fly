{
	"javascript": {
		"globals": ["NodeJS"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"ignore": [
			"node_modules/**",
			"dist/**"
		],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	}
}
